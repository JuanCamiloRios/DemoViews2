<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DemoViews2.EjercicioDeColores">
    <ContentPage.Content>
        <StackLayout>
            <BoxView x:Name="boxColor"
                  BackgroundColor="Black"
                  HeightRequest="300"/>ç
            <Label Margin="50,30,0,0"
                   Text="Rojo"/>
            <Slider x:Name="sldRojo"
                    Margin="15,0,0,0"
                    ValueChanged=" CambiarColor"/>
            <Label Margin="50,30,0,0"
                   Text="Azul"/>
            <Slider x:Name="sldAzul"
                    Margin="15,0,0,0"
                    ValueChanged=" CambiarColor"/>
            <Label Margin="50,30,0,0"
                   Text="Verde"/>
            <Slider x:Name="sldVerde"
                    Margin="15,0,0,0"
                    ValueChanged=" CambiarColor"/>
            <Label x:Name="ldDisplay"
                   Text="Valor Hexadecimal"
                   FontAttributes="Bold"
                   FontSize="Large"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>